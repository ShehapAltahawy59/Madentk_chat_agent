[Unit]
Description=Chat Agent FastAPI Service
After=network.target

[Service]
Type=simple
User=__RUN_USER__
Group=__RUN_USER__
WorkingDirectory=__APP_DIR__
Environment=PATH=__APP_DIR__/madentk-chat-agent-venv/bin
EnvironmentFile=/etc/madentk-chat-agent.env
ExecStart=/bin/bash __APP_DIR__/start.sh
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=madentk-chat-agent

[Install]
WantedBy=multi-user.target
