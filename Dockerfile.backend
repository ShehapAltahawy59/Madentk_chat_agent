FROM python:3.10-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:128 \
    OMP_NUM_THREADS=1

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy and install Python dependencies
COPY requirements.backend.txt ./
RUN pip install --no-cache-dir --upgrade pip \
    && pip install --no-cache-dir -r requirements.backend.txt \
    && pip install --no-cache-dir torch --index-url https://download.pytorch.org/whl/cpu \
    && rm -rf /root/.cache/pip

# Copy application code
COPY agent/ ./agent/
COPY routes/ ./routes/
COPY app.py ./
COPY chroma_db/ /data/chroma_db/
ENV CHROMA_DB_DIR=/data/chroma_db
EXPOSE 8080

# Create a startup script for fast startup
RUN echo '#!/bin/bash\n\
echo "Starting FastAPI application..."\n\
echo "PORT: ${PORT:-8080}"\n\
echo "ML models are loaded at startup for better performance"\n\
exec uvicorn app:app --host 0.0.0.0 --port ${PORT:-8080} --timeout-keep-alive 300\n\
' > /app/start.sh && chmod +x /app/start.sh

CMD ["/app/start.sh"] 
